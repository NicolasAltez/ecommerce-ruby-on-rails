<% @products.each do |product| %>
  <div class="product">
    <h3 class="product-name"><%= product.name %></h3>
    <p class="product-description"><%= product.description %></p>
    <p class="product-price">Price: <%= number_to_currency(product.price) %></p>
    <% if current_user %>
      <%= form_with url: add_to_cart_path(product), method: :post, class: "add-to-cart-form" do |form| %>
        <div class="form-group-product">
          <%= form.label :quantity, "Quantity" %>
          <%= form.select :quantity, (1..10).to_a, class: "quantity-select" %>
        </div>
        <div class="form-group-product">
          <%= form.submit 'Add to Cart', class: "add-to-cart-button" %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>